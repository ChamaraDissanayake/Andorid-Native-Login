<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:id="@+id/parent_layout_new">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_image_new"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/test2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_name_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watson"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/chat_image_new"
        app:layout_constraintStart_toStartOf="@+id/chat_image_new"
        app:layout_constraintTop_toBottomOf="@+id/chat_image_new" />


</androidx.constraintlayout.widget.ConstraintLayout>